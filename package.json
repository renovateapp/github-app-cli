{
  "name": "@renovate/github-app-cli",
  "version": "0.0.0-semantic-release",
  "private": false,
  "description": "GitHub App CLI wrapper for Renovate",
  "main": "index.js",
  "repository": "https://github.com/renovateapp/github-app-cli.git",
  "author": "Rhys Arkins <rhys@arkins.net>",
  "license": "MIT",
  "bin": {
    "renovate-gh-app": "./lib/index.js"
  },
  "scripts": {
    "lint": "eslint lib test",
    "lint-fix": "eslint --fix lib test",
    "prettier": "prettier \"**/*.{js,json,md}\" --write",
    "start": "node lib/index | bunyan",
    "test-dirty": "git diff --exit-code",
    "test": "npm run prettier -- --list-different && npm run lint"
  },
  "engines": {
    "node": ">=8.9.4",
    "npm": "5"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "got": "8.3.0",
    "jsonwebtoken": "8.2.0",
    "renovate": "11.44.11"
  },
  "devDependencies": {
    "codecov": "3.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-promise": "3.7.0",
    "prettier": "1.11.1",
    "semantic-release": "12.4.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":rebaseStalePrs",
      ":label(ready)",
      ":assignee(rarkins)"
    ],
    "semanticCommitScope": null
  },
  "publishConfig": {
    "tag": "latest"
  },
  "release": {
    "branch": "master",
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "readme.md",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        }
      ]
    }
  }
}
